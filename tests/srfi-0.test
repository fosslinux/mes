#! /bin/sh
# -*-scheme-*-
if [ "$MES" != guile ]; then
    export MES_BOOT=boot-02.scm
    MES=${MES-$(dirname $0)/../bin/mes}
    $MES < $0
    exit $?
fi
exec ${MES-mes} --no-auto-compile -L ${0%/*} -L module -C module -e '(tests boot)' -s "$0" "$@"
