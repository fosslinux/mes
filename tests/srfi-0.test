(define-module (tests srfi-0)
  #:use-module (mes mes-0)
  #:use-module (mes test))

(display "srfi-0...\n")

(cond-expand
 (mes
  (display "mes\n")
  (exit 0))
 (guile
  (display "guile\n")
  (exit guile?))
 (else
  (exit 1)))

(exit 1)
