#! /bin/sh
# -*-scheme-*-
if [ "$MES" != guile ]; then
    MES=${MES-$(dirname $0)/../bin/mes}
    MES_BOOT=boot-02.scm exec $MES < $0
    exit $?
fi
exec ${MES-mes} --no-auto-compile -L ${0%/*} -L module -C module -e '(tests perform)' -s "$0" "$@"
